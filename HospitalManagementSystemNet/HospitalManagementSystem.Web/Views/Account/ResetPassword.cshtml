@model HospitalManagementSystem.Models.Person

@using (Html.BeginForm())
{
    <div class="row">
        <h3>RETRIEVE YOUR PASSWORD HERE</h3>
        <br />
        <p>Please enter your Cellphone number below. You will receive a link to reset your password.</p>
        <div class="">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <label>Cellphone Number<span class="requiredField">*</span></label>
                @Html.TextBoxFor(ui => ui.Cellphone, new { @class = "form-control", @Required = "Required" })
                <br />
                @Html.Partial("_RequiredFieldNote")
            </div>
            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4"> 
                <br />
                <div class="centered">
                    <input type="button" value="Submit" class="btn btn-primary" onclick="resetPassword();" /><br />
                </div>
            </div>
        </div>
        <div class="std-top-padding">
            @if (Model != null && !string.IsNullOrWhiteSpace(Model.Error))
            {
                <div class="alert alert-warning" role="alert">
                    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <strong>Outcome: </strong> @Model.Error
                </div>
            }
        </div>
    </div>
}
